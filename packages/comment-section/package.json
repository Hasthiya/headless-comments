{
  "name": "@hasthiya_/headless-comments-react",
  "version": "2.0.0",
  "description": "A truly headless React comment system with generic types, tree CRUD, standalone hooks, composable per-comment hooks, and pluggable adapters. TypeScript-ready and fully themeable.",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./core": {
      "types": "./dist/core.d.ts",
      "import": "./dist/core.mjs",
      "require": "./dist/core.js"
    },
    "./headless": {
      "types": "./dist/headless.d.ts",
      "import": "./dist/headless.mjs",
      "require": "./dist/headless.js"
    },
    "./presets/default": {
      "types": "./dist/presets/default.d.ts",
      "import": "./dist/presets/default.mjs",
      "require": "./dist/presets/default.js"
    },
    "./presets/styled": {
      "types": "./dist/presets/styled.d.ts",
      "import": "./dist/presets/styled.mjs",
      "require": "./dist/presets/styled.js"
    },
    "./presets/styled/styles.css": "./presets/styled/styles.css",
    "./adapters/supabase": {
      "types": "./dist/adapters/supabase.d.ts",
      "import": "./dist/adapters/supabase.mjs",
      "require": "./dist/adapters/supabase.js"
    }
  },
  "files": [
    "dist",
    "presets/styled/styles.css",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "react",
    "comment",
    "comment-section",
    "comments",
    "reply",
    "reaction",
    "headless",
    "tree-crud",
    "composable-hooks",
    "adapter",
    "optimistic-updates",
    "typescript",
    "component",
    "ui",
    "discussion",
    "thread",
    "nested-comments",
    "themeable",
    "customizable"
  ],
  "author": "Hasthiya (https://github.com/Hasthiya)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Hasthiya/headless-comments.git"
  },
  "bugs": {
    "url": "https://github.com/Hasthiya/headless-comments/issues"
  },
  "homepage": "https://github.com/Hasthiya/headless-comments#readme",
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "peerDependenciesMeta": {
    "@supabase/supabase-js": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "sideEffects": false,
  "engines": {
    "node": ">=16.0.0"
  }
}
